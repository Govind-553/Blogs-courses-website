    background-color: #0056b3 !important;
}

/* Swiper Navigation Buttons */
.swiper-button-next,
.swiper-button-prev {
    color: #007BFF;
    top: 50%;
    transform: translateY(-50%);
    width: 30px;
    height: 30px;
}

