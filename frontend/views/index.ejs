<script>
    //razorpay script for payment & order
function enrollNow(courseName, price, link) {
    fetch('/createOrder', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            amount: price, // Price in paise
            name: courseName,
            description: 'Course Payment'
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            var options = {
                key: data.key_id,
                amount: data.amount,
                currency: 'INR',
                name: data.name,
                description: data.description,
                image: 'https://www.example.com/logo.png', // Replace with your logo URL
                order_id: data.order_id,
                handler: function (response) {
                    alert('Payment successful');
                    // Redirect to the course link after successful payment
                    window.location.href = link;
                },
                prefill: {
                    name: data.name,
                    email: data.email,
                    contact: data.contact
                },
                notes: {
                    address: 'Blogs & Courses website'
                },
                theme: {
                    color: '#007bff'
                }
            };
            var rzp1 = new Razorpay(options);
            rzp1.open();
        } else {
            alert('Order creation failed. Please try again!');
        }
    })
    .catch(error => console.error('Error:', error));
}
